<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_back"
    tools:context=".MajorChoice">

    <ImageView
        android:id="@+id/imageView24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="52dp"
        android:layout_marginBottom="26dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/make_c" />

    <ScrollView
        android:layout_width="409dp"
        android:layout_height="658dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView24"
        android:scrollbarThumbVertical="@drawable/custom_scroll_bar"
        android:fadeScrollbars="false"
        android:scrollbarSize="5dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageView22"
                android:layout_width="137dp"
                android:layout_height="444dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="12dp"
                android:onClick="on_click_army"
                app:srcCompat="@drawable/arm" />

            <ImageView
                android:id="@+id/imageView23"
                android:layout_width="137dp"
                android:layout_height="444dp"
                android:layout_marginTop="12dp"
                android:layout_marginStart="250dp"
                android:onClick="on_click_dete"
                app:srcCompat="@drawable/dete"/>

            <Button
                android:id="@+id/button10"
                android:layout_width="73dp"
                android:layout_height="71dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="550dp"
                android:background="@drawable/orang_back"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <Button
                android:id="@+id/button11"
                android:layout_width="73dp"
                android:layout_height="71dp"
                android:layout_marginStart="300dp"
                android:layout_marginTop="550dp"
                android:background="@drawable/orange_but"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />



            <TextView
                android:id="@+id/textView18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="456dp"
                android:text="@string/army_name"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="25dp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView22" />

            <TextView
                android:id="@+id/textView19"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="460dp"
                android:layout_marginStart="250dp"
                android:text="@string/detective_name"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="25dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView23" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginBottom="60dp"
                android:layout_below="@id/button10">

            </LinearLayout>

        </RelativeLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>
