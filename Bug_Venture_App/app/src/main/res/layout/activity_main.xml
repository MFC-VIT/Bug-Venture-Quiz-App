<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    tools:context=".MainActivity"
    android:layout_width="match_parent"
    android:background="@drawable/main_back"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="16dp"
        android:contentDescription="@string/bug_image"
        fbutton:layout_constraintEnd_toEndOf="parent"
        fbutton:layout_constraintTop_toTopOf="parent"
        fbutton:srcCompat="@drawable/green_bug" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="300dp"
        android:layout_marginEnd="108dp"
        android:contentDescription="@string/bug_venture"
        fbutton:layout_constraintEnd_toEndOf="parent"
        fbutton:layout_constraintTop_toTopOf="parent"
        fbutton:srcCompat="@drawable/bug_venture" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="96dp"
        android:layout_marginEnd="108dp"
        android:contentDescription="@string/mfc_l"
        fbutton:layout_constraintEnd_toEndOf="parent"
        fbutton:layout_constraintTop_toBottomOf="@+id/imageView2"
        fbutton:srcCompat="@drawable/love_mfc" />
</androidx.constraintlayout.widget.ConstraintLayout>